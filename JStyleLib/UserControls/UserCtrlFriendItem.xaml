<UserControl x:Class="JStyleLib.UserControls.UserCtrlFriendItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="UC">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ImgWidth" Width="Auto"/>
            <ColumnDefinition x:Name="InfoWidth" Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="CtrlIco" Grid.Column="0" Grid.RowSpan="2" Source="{Binding IcoPath,ElementName=UC}"/>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Grid.Column="1" Grid.Row="0">
                <TextBlock x:Name="CtrlNickName" Text="{Binding NickName,ElementName=UC}"/>
                <TextBlock x:Name="CtrlRemarks" Text="{Binding Remarks,ElementName=UC}"/>
            </StackPanel>
            <Label x:Name="CtrlSignature" Grid.Column="1" Grid.Row="1" Content="{Binding Signature,ElementName=UC}"/>
        </DockPanel>
    </Grid>
</UserControl>
